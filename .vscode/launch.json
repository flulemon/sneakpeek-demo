  "version": "0.2.1",
  "configurations": [
    {
      "name": "python",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/demo/app.py",
      "args": [],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run server (no-read-only)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/demo/app.py",
      "args": ["--no-read-only"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run handler",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/demo/demo_scraper.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
